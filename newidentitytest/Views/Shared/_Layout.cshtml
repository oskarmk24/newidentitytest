@* 
    Main layout template for the application.
    Provides the HTML structure, navigation, and common scripts/styles used across all pages.
    Includes responsive navigation that adapts based on authentication status and current page context.
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Digital Obstacle Report</title>

    @* Tailwind CSS via CDN - for production, use a proper build pipeline *@
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
          theme: {
            extend: {
              container: { center: true, padding: { DEFAULT: '1rem', md: '1.5rem' } }
            }
          }
        }
    </script>

    @* Application-specific stylesheets *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/newidentitytest.styles.css" asp-append-version="true" />
    @* Leaflet map library styles for interactive maps *@
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
</head>
<body class="min-h-screen flex flex-col bg-gray-50 text-gray-900">
    <!-- Header / Nav -->
    <header class="border-b bg-white">
        <nav class="container flex items-center justify-between py-3">
            <a class="text-lg font-semibold tracking-tight hover:text-indigo-600 transition-colors"
               asp-area="" asp-controller="Home" asp-action="Index">
                Digital Obstacle Report
            </a>

            @{
                @* Determine if navigation links should be shown based on current page and authentication status *@
                var isIdentityAccountPage = ViewContext.RouteData.Values["area"]?.ToString() == "Identity" 
                    && ViewContext.RouteData.Values["page"]?.ToString()?.Contains("/Account/") == true;
                var showNavLinks = !isIdentityAccountPage || User.Identity?.IsAuthenticated == true;
            }

            @* Identity login/register partial view *@
            <div class="flex items-center gap-6">
                <div class="hidden md:block">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        @* Show login/register links on mobile devices when appropriate *@
        @if (showNavLinks)
        {
            <div class="container md:hidden mt-2">
                <partial name="_LoginPartial" />
            </div>
        }
    </header>

    @* Main content area where individual view content is rendered *@
    <div class="container flex-1 w-full">
        <main role="main" class="py-6">
            @RenderBody()
        </main>
    </div>

    @* Footer with copyright and privacy policy link *@
    <footer class="border-t bg-white text-sm text-gray-600">
        <div class="container py-4 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
            <p>&copy; 2025 - Digital Obstacle Report</p>
            <p>
                <a class="text-indigo-700 hover:underline"
                   asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </p>
        </div>
    </footer>

    @* Common JavaScript libraries and scripts *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* Leaflet map library for interactive maps *@
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    @* Optional scripts section for views that need additional JavaScript *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
