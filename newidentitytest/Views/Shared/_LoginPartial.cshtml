@* 
    Login partial view that displays authentication controls in the navigation.
    Shows user greeting and logout button for authenticated users, or login/register links for anonymous users.
*@
@using Microsoft.AspNetCore.Identity
@using newidentitytest.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@* Display user information and logout for authenticated users *@
@if (SignInManager.IsSignedIn(User))
{
    <div class="flex items-center gap-2">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" 
           class="block rounded-md px-3 py-2 hover:bg-gray-100 hover:text-indigo-700">
            Hello @User.Identity?.Name!
        </a>
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" 
                    class="block rounded-md px-3 py-2 hover:bg-gray-100 hover:text-indigo-700 bg-transparent border-none cursor-pointer">
                Logout
            </button>
        </form>
    </div>
}
@* Display login and register links for anonymous users *@
else
{
    <div class="flex items-center gap-2">
        <a asp-area="Identity" asp-page="/Account/Register" 
           class="block rounded-md px-3 py-2 hover:bg-gray-100 hover:text-indigo-700">
            Register
        </a>
        <a asp-area="Identity" asp-page="/Account/Login" 
           class="block rounded-md px-3 py-2 hover:bg-gray-100 hover:text-indigo-700">
            Login
        </a>
    </div>
}
