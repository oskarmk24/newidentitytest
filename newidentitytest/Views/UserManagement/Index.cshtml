@model IEnumerable<newidentitytest.Controllers.UserManagementController.UserViewModel>

@{
    ViewData["Title"] = "User Management";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">User Management</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (Model.Any())
    {
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Username</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Organization</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Roles</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@item.User.Email</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-500">@item.User.UserName</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (item.User.Organization != null)
                                {
                                    <span class="text-sm text-gray-900">@item.User.Organization.Name</span>
                                }
                                else
                                {
                                    <span class="text-sm text-gray-400">No organization</span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                @if (item.Roles.Any())
                                {
                                    <div class="flex flex-wrap gap-1">
                                        @foreach (var role in item.Roles)
                                        {
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-indigo-100 text-indigo-800">
                                                @role
                                            </span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-sm text-gray-400">No roles</span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <a asp-action="Details" asp-route-id="@item.User.Id" class="text-indigo-600 hover:text-indigo-900">Manage</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow p-8 text-center">
            <p class="text-gray-500">No users found.</p>
        </div>
    }
</div>

