@model IEnumerable<newidentitytest.Models.ReportListItem>
@{
    ViewData["Title"] = "Reports";
    var sortBy = ViewBag.SortBy as string ?? "CreatedAt";
    var sortOrder = ViewBag.SortOrder as string ?? "desc";
    var search = ViewBag.Search as string ?? "";
}

<section class="container mx-auto">
    <header class="flex items-center justify-between mb-4">
        <h1 class="text-2xl font-semibold">Reports (@Model.Count())</h1>
        <div class="flex items-center gap-2">
            @* Server-side search form *@
            <form method="get" action="@Url.Action("Index")" class="flex items-center gap-2">
                <input type="text" name="search" value="@search" placeholder="Search..." 
                       class="rounded-lg ring-1 ring-gray-300 px-3 py-2" />
                <input type="hidden" name="sortBy" value="@sortBy" />
                <input type="hidden" name="sortOrder" value="@sortOrder" />
                <button type="submit" class="rounded-lg px-3 py-2 ring-1 ring-gray-300 hover:bg-gray-50">
                    Search
                </button>
                @if (!string.IsNullOrEmpty(search))
                {
                    <a href="@Url.Action("Index", new { sortBy = sortBy, sortOrder = sortOrder })" 
                       class="rounded-lg px-3 py-2 ring-1 ring-gray-300 hover:bg-gray-50">
                        Clear
                    </a>
                }
            </form>
            <a asp-controller="Obstacle" asp-action="DataForm"
               class="inline-flex items-center rounded-lg px-3 py-2 ring-1 ring-gray-300 hover:bg-gray-50">Create</a>
        </div>
    </header>

    <div class="overflow-x-auto rounded-xl ring-1 ring-gray-200 bg-white">
        <table class="min-w-full text-sm">
            <thead class="bg-gray-50 text-left text-gray-600">
                <tr>
                    @{
                        string GetSortUrl(string column)
                        {
                            var newSortOrder = (sortBy == column && sortOrder == "asc") ? "desc" : "asc";
                            return Url.Action("Index", new { sortBy = column, sortOrder = newSortOrder, search = search });
                        }
                        
                        string GetSortIcon(string column)
                        {
                            return "â‡…";
                        }
                    }
                    <th class="px-4 py-3">
                        <a href="@GetSortUrl("id")" class="flex items-center gap-1 hover:text-gray-900 text-gray-600">
                            Report ID <span class="text-gray-600">@GetSortIcon("id")</span>
                        </a>
                    </th>
                    <th class="px-4 py-3">
                        <a href="@GetSortUrl("createdat")" class="flex items-center gap-1 hover:text-gray-900 text-gray-600">
                            Creation Date <span class="text-gray-600">@GetSortIcon("createdat")</span>
                        </a>
                    </th>
                    <th class="px-4 py-3">
                        <a href="@GetSortUrl("sender")" class="flex items-center gap-1 hover:text-gray-900 text-gray-600">
                            Sender <span class="text-gray-600">@GetSortIcon("sender")</span>
                        </a>
                    </th>
                    <th class="px-4 py-3">
                        <a href="@GetSortUrl("obstacletype")" class="flex items-center gap-1 hover:text-gray-900 text-gray-600">
                            Obstacle Type <span class="text-gray-600">@GetSortIcon("obstacletype")</span>
                        </a>
                    </th>
                    <th class="px-4 py-3">
                        <a href="@GetSortUrl("status")" class="flex items-center gap-1 hover:text-gray-900 text-gray-600">
                            Status <span class="text-gray-600">@GetSortIcon("status")</span>
                        </a>
                    </th>
                    <th class="px-4 py-3">Location</th>
                </tr>
            </thead>
            <tbody id="reportRows" class="divide-y divide-gray-100">
                @foreach (var r in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3">
                            <a class="text-indigo-700 hover:underline" asp-controller="Reports" asp-action="Details" asp-route-id="@r.Id">@r.Id</a>
                        </td>
                        <td class="px-4 py-3">@r.CreatedAt.ToString("MMM dd, yyyy")</td>
                        <td class="px-4 py-3">@r.Sender</td>
                        <td class="px-4 py-3">@(r.ObstacleType ?? "-")</td>
                        <td class="px-4 py-3">
                            @{
                                var status = r.Status ?? "Pending";
                                var statusClass = status.ToLowerInvariant() switch
                                {
                                    "approved" => "bg-green-100 text-green-800",
                                    "rejected" => "bg-red-100 text-red-800",
                                    _ => "bg-yellow-100 text-yellow-800"
                                };
                            }
                            <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium @statusClass">
                                @status
                            </span>
                        </td>
                        <td class="px-4 py-3">
                            @{
                                if (!string.IsNullOrWhiteSpace(r.ObstacleLocation))
                                {
                                    try
                                    {
                                        var geo = System.Text.Json.JsonSerializer.Deserialize<System.Text.Json.JsonElement>(r.ObstacleLocation);
                                        var coordinates = geo.GetProperty("coordinates");
                                        var lng = coordinates[0].GetDecimal();
                                        var lat = coordinates[1].GetDecimal();
                                        <text>Lat: @lat, Lng: @lng</text>
                                    }
                                    catch
                                    {
                                        <text>-</text>
                                    }
                                }
                                else
                                {
                                    <text>-</text>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
