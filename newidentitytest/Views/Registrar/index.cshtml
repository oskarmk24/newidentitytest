@model IEnumerable<newidentitytest.Models.Report>

@{
    ViewData["Title"] = "Registrar Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">Welcome, Registrar</h1>
            <hr />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3>Incoming Reports</h3>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Type</th>
                                    <th>Description</th>
                                    <th>Location</th>
                                    <th>Reported At</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var r in Model)
                            {
                                <tr>
                                    <td>@r.Id</td>
                                    <td>@r.ObstacleType</td>
                                    <td>@r.ObstacleDescription</td>
                                    <td>@r.ObstacleLocation</td>
                                    <td>@r.CreatedAt.ToString("g")</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No recent reports.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>