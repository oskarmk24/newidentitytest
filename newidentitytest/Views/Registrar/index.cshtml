@* 
    Registerførers dashboard som viser statistikk og navigasjon til viktige administrative funksjoner.
    Viser totale rapporter, ventende rapporter, database status og rapporter tildelt den nåværende registerføreren.
*@
@using newidentitytest.Models
@{
    ViewData["Title"] = "Registrar Dashboard";
    var reportCount = ViewBag.ReportCount as int? ?? 0;
    var pendingCount = ViewBag.PendingReportsCount as int? ?? 0;
    var myCases = ViewBag.MyAssignedReports as List<Report> ?? new();
}

<section class="container mx-auto py-12">
    @* Welcome header for registrars *@
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-3">Welcome, Registrar</h1>
        <p class="text-xl text-gray-600">Manage and review obstacle reports</p>
    </div>

    @* Statistics cards showing report counts and database status *@
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="bg-white rounded-xl shadow-sm ring-1 ring-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Total Reports</p>
                    <p class="text-3xl font-bold text-gray-900 mt-2">@reportCount</p>
                </div>
                <div class="p-3 bg-indigo-100 rounded-lg">
                    <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                </div>
            </div>
        </div>
        
        <a asp-controller="Registrar" asp-action="Pending" class="group relative bg-white rounded-xl shadow-sm ring-1 ring-gray-200 p-6 hover:ring-2 hover:ring-yellow-500 hover:shadow-md transition-all duration-200">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Pending Reports</p>
                    <p class="text-3xl font-bold text-gray-900 mt-2">@pendingCount</p>
                </div>
                <div class="p-3 bg-yellow-100 rounded-lg">
                    <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </a>
        
        <div class="bg-white rounded-xl shadow-sm ring-1 ring-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Database Status</p>
                    @{
                        var status = ViewBag.SystemStatus as string ?? "Unknown";
                        var statusColor = ViewBag.SystemStatusColor as string ?? "gray";
                    }
                    <p class="text-lg font-semibold text-@(statusColor)-600 mt-2">@status</p>
                </div>
                <div class="p-3 bg-@(statusColor)-100 rounded-lg">
                    <svg class="w-8 h-8 text-@(statusColor)-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>
    </div>

    @* Navigation cards to key registrar functions *@
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        <!-- View All Reports Button -->
        <a asp-controller="Reports" asp-action="Index" 
           class="group relative bg-white rounded-xl shadow-sm ring-1 ring-gray-200 p-8 hover:ring-2 hover:ring-indigo-500 hover:shadow-md transition-all duration-200">
            <div class="flex flex-col items-center text-center">
                <div class="p-4 bg-indigo-100 rounded-full mb-4 group-hover:bg-indigo-200 transition-colors">
                    <svg class="w-10 h-10 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">View All Reports</h3>
                <p class="text-gray-600 text-sm">Browse and manage all submitted obstacle reports</p>
            </div>
        </a>

        <!-- Map Button -->
        <a asp-controller="Obstacle" asp-action="DataForm" 
           class="group relative bg-white rounded-xl shadow-sm ring-1 ring-gray-200 p-8 hover:ring-2 hover:ring-blue-500 hover:shadow-md transition-all duration-200">
            <div class="flex flex-col items-center text-center">
                <div class="p-4 bg-blue-100 rounded-full mb-4 group-hover:bg-blue-200 transition-colors">
                    <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">View Map</h3>
                <p class="text-gray-600 text-sm">See all obstacle reports on an interactive map</p>
            </div>
        </a>

        <!-- Organizations Button -->
        <a asp-controller="Organization" asp-action="Index" 
           class="group relative bg-white rounded-xl shadow-sm ring-1 ring-gray-200 p-8 hover:ring-2 hover:ring-purple-500 hover:shadow-md transition-all duration-200">
            <div class="flex flex-col items-center text-center">
                <div class="p-4 bg-purple-100 rounded-full mb-4 group-hover:bg-purple-200 transition-colors">
                    <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Organizations</h3>
                <p class="text-gray-600 text-sm">Manage organizations and their members</p>
            </div>
        </a>

        <!-- Roles Button -->
        <a asp-controller="Role" asp-action="Index" 
           class="group relative bg-white rounded-xl shadow-sm ring-1 ring-gray-200 p-8 hover:ring-2 hover:ring-teal-500 hover:shadow-md transition-all duration-200">
            <div class="flex flex-col items-center text-center">
                <div class="p-4 bg-teal-100 rounded-full mb-4 group-hover:bg-teal-200 transition-colors">
                    <svg class="w-10 h-10 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Roles</h3>
                <p class="text-gray-600 text-sm">Manage user roles and permissions</p>
            </div>
        </a>

        <!-- Users Button -->
        <a asp-controller="UserManagement" asp-action="Index" 
           class="group relative bg-white rounded-xl shadow-sm ring-1 ring-gray-200 p-8 hover:ring-2 hover:ring-cyan-500 hover:shadow-md transition-all duration-200">
            <div class="flex flex-col items-center text-center">
                <div class="p-4 bg-cyan-100 rounded-full mb-4 group-hover:bg-cyan-200 transition-colors">
                    <svg class="w-10 h-10 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Users</h3>
                <p class="text-gray-600 text-sm">Manage user accounts and assignments</p>
            </div>
        </a>
    </div>
</section>

@* Section displaying reports assigned to the current registrar *@
<section class="container mx-auto pb-12">
    <div class="bg-white rounded-xl shadow-sm ring-1 ring-gray-200 p-6">
        <div class="flex items-center justify-between mb-4">
            <div>
                <h2 class="text-2xl font-semibold text-gray-900">My cases</h2>
                <p class="text-gray-600 text-sm">Reports currently assigned to you</p>
            </div>
            <a asp-controller="Reports" asp-action="Index" class="text-sm text-indigo-600 hover:underline">
                View all reports
            </a>
        </div>

        @if (myCases.Any())
        {
            <div class="space-y-3">
                @foreach (var report in myCases)
                {
                    <a asp-controller="Reports" asp-action="Details" asp-route-id="@report.Id"
                       class="flex items-center justify-between rounded-lg border border-gray-200 px-4 py-3 hover:bg-gray-50 transition">
                        <div>
                            <p class="text-sm text-gray-500">Report #@report.Id</p>
                            <p class="text-base font-medium text-gray-900">@(!string.IsNullOrWhiteSpace(report.ObstacleType) ? report.ObstacleType : "Obstacle")</p>
                        </div>
                        <div class="text-right">
                            <p class="text-sm text-gray-500">@report.CreatedAt.ToString("MMM dd, yyyy")</p>
                            <span class="text-xs inline-flex rounded-full bg-yellow-100 px-2 py-1 text-yellow-800">Pending</span>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <p class="text-gray-600 text-sm">No reports assigned to you yet.</p>
        }
    </div>
</section>
