@{
    ViewData["Title"] = "Manage User Roles";
    var userId = ViewBag.UserId as string ?? "";
    var userName = ViewBag.UserName as string ?? "";
    var userEmail = ViewBag.UserEmail as string ?? "";
    var userRoles = ViewBag.UserRoles as IEnumerable<string> ?? new List<string>();
    var allRoles = ViewBag.AllRoles as IEnumerable<string> ?? new List<string>();
}

<div class="container mx-auto px-4 py-8 max-w-3xl">
    <div class="mb-6">
        <a asp-controller="UserManagement" asp-action="Index" class="text-indigo-600 hover:text-indigo-700">← Back to Users</a>
    </div>

    <h1 class="text-3xl font-bold mb-6">Manage Roles for @userEmail</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4">Current Roles</h2>
        @if (userRoles.Any())
        {
            <div class="flex flex-wrap gap-2">
                @foreach (var role in userRoles)
                {
                    <div class="flex items-center gap-2 bg-indigo-100 text-indigo-800 px-3 py-1 rounded-full">
                        <span class="text-sm font-medium">@role</span>
                        <form asp-action="RemoveRole" method="post" class="inline">
                            <input type="hidden" name="userId" value="@userId" />
                            <input type="hidden" name="roleName" value="@role" />
                            <button type="submit" class="text-indigo-600 hover:text-indigo-800 text-xs" 
                                    onclick="return confirm('Remove @role role from this user?')">
                                ×
                            </button>
                        </form>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-gray-500">No roles assigned</p>
        }
    </div>

    <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-4">Available Roles</h2>
        @if (allRoles.Any())
        {
            <div class="space-y-2">
                @foreach (var role in allRoles)
                {
                    @if (!userRoles.Contains(role))
                    {
                        <div class="flex items-center justify-between p-3 border border-gray-200 rounded-md">
                            <span class="text-sm text-gray-900">@role</span>
                            <form asp-action="AssignRole" method="post" class="inline">
                                <input type="hidden" name="userId" value="@userId" />
                                <input type="hidden" name="roleName" value="@role" />
                                <button type="submit" class="bg-indigo-600 text-white px-3 py-1 rounded-md hover:bg-indigo-700 transition-colors text-sm">
                                    Assign
                                </button>
                            </form>
                        </div>
                    }
                }
            </div>
        }
        else
        {
            <p class="text-gray-500">No roles available</p>
        }
    </div>
</div>

