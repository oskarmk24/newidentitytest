@* 
    Delete organization confirmation page.
    Shows warning about permanent deletion and impact on assigned users.
    Accessible only to Admin and Registrar roles.
*@
@model newidentitytest.Models.Organization

@{
    ViewData["Title"] = "Delete Organization";
}

<div class="container mx-auto px-4 py-8 max-w-2xl">
    <h1 class="text-3xl font-bold mb-6 text-red-600">Delete Organization</h1>

    <div class="bg-white rounded-lg shadow p-6">
        <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
            <p class="text-red-800 font-medium">Warning: This action cannot be undone.</p>
            @if (Model.Users.Any())
            {
                <p class="text-red-700 text-sm mt-2">
                    This organization has @Model.Users.Count user(s). They will be unassigned from this organization.
                </p>
            }
        </div>

        <h3 class="text-lg font-semibold mb-4">Are you sure you want to delete this organization?</h3>
        
        <dl class="space-y-2 mb-6">
            <div>
                <dt class="text-sm font-medium text-gray-500">Name</dt>
                <dd class="text-sm text-gray-900">@Model.Name</dd>
            </div>
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div>
                    <dt class="text-sm font-medium text-gray-500">Description</dt>
                    <dd class="text-sm text-gray-900">@Model.Description</dd>
                </div>
            }
            <div>
                <dt class="text-sm font-medium text-gray-500">Users</dt>
                <dd class="text-sm text-gray-900">@Model.Users.Count user(s)</dd>
            </div>
        </dl>

        <form asp-action="Delete" method="post" class="flex justify-end gap-3">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="bg-gray-200 text-gray-800 px-4 py-2 rounded-md hover:bg-gray-300 transition-colors">
                Cancel
            </a>
            <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors">
                Delete Organization
            </button>
        </form>
    </div>
</div>

