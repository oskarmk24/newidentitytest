@* 
    Hinderregistreringsskjema visning med interaktivt kart.
    Lar piloter registrere nye hindringer ved å velge plassering på kartet og fylle ut skjema detaljer.
    For registratorer vises et skrivebeskyttet kartvisning av alle godkjente hindringer.
    Støtter både Punkt og Linje hindringstyper med fullskjerm kartbytte funksjonalitet.
*@
@model newidentitytest.Models.ObstacleData

@{
    ViewData["Title"] = "Register Obstacle";
    var isRegistrar = User.IsInRole("Registrar");
}

@* Material Symbols icon font for info icons *@
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=info" />

@* Interactive map section for selecting obstacle location *@
<section id="mapWrapper" class="mx-auto max-w-2xl map-fullscreen">
    <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-6 map-card">
        <header class="mb-6">
            <h1 class="text-2xl font-semibold">@(isRegistrar ? "Obstacle Reports Map" : "Map")</h1>
        </header>

        @* Leaflet map container *@
        <div id="map" style="position: relative;"></div>

        @* Dynamic hint text that updates when user interacts with map *@
        <div id="coordsHint" class="mt-2 text-sm text-gray-600">
            @if (isRegistrar)
            {
                <text>View all obstacle reports on the map (read-only)</text>
            }
            else
            {
                <text>Click the map to drop a pin.</text>
            }
        </div>
    </div>
    
    @* Fullscreen toggle button for map view *@
    <button id="toggleMapButton" 
            class="toggle-map-button"
            aria-label="Toggle map view"
            title="Toggle map view">
        <svg id="minimizeIcon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: none;">
            <path d="M8 3v3a2 2 0 0 1-2 2H3m18 0h-3a2 2 0 0 1-2-2V3m0 18v-3a2 2 0 0 1 2-2h3M3 16h3a2 2 0 0 1 2 2v3"></path>
        </svg>
        <svg id="maximizeIcon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M8 3H5a2 2 0 0 0-2 2v3m18 0V5a2 2 0 0 0-2-2h-3m0 18h3a2 2 0 0 0 2-2v-3M3 16v3a2 2 0 0 0 2 2h3"></path>
        </svg>
    </button>
</section>

