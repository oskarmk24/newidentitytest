@model newidentitytest.Models.ObstacleData

@{
    ViewData["Title"] = "Register Obstacle";
    var isRegistrar = User.IsInRole("Registrar");
}

<!-- pilot meny (top-right, only on map) -->
<details id="pilotMenu" style="position:fixed; top:16px; right:16px; z-index:9999;">
  <summary aria-label="Open menu"
           style="list-style:none; background:#fff; border-radius:6px; padding:8px; box-shadow:0 1px 2px rgba(0,0,0,.05); outline:1px solid #e5e7eb; cursor:pointer;">
    <span style="display:block;width:22px;height:3px;background:#000;border-radius:2px;"></span>
    <span style="display:block;width:22px;height:3px;background:#000;border-radius:2px;margin-top:6px;"></span>
    <span style="display:block;width:22px;height:3px;background:#000;border-radius:2px;margin-top:6px;"></span>
  </summary>
  <nav style="position:absolute; right:0; top:calc(100% + 8px); background:#fff; border-radius:8px; box-shadow:0 4px 12px rgba(0,0,0,.08); outline:1px solid #e5e7eb; padding:6px 0; width:176px;">
    <a asp-controller="Reports" asp-action="Index" class="block px-3 py-2 hover:bg-gray-100">Reports</a>
    <a asp-controller="Home" asp-action="Privacy" class="block px-3 py-2 hover:bg-gray-100">Privacy</a>
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
      <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="block w-full text-left px-3 py-2 hover:bg-gray-100 bg-transparent border-0 cursor-pointer">Logout</button>
      </form>
    }
  </nav>
</details>

