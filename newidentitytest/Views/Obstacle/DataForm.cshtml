@section Scripts {
    <!-- Script for klient-side validering -->
    <partial name="_ValidationScriptsPartial" />

    <!-- Laster inn filer fra JsDelivr CDN for marker lokasjon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet.locatecontrol@0.85.1/dist/L.Control.Locate.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/leaflet.locatecontrol@0.85.1/dist/L.Control.Locate.min.js" charset="utf-8"></script>
    
    <script>
        // Include hidden inputs in client-side validation so ObstacleLocation (hidden) shows errors
        if (window.jQuery && jQuery.validator) {
            jQuery(function(){
                var $form = jQuery('form[method="post"][action$="DataForm"], form').first();
                var v = $form.data('validator');
                if (v && v.settings) { v.settings.ignore = ""; }
                else { jQuery.validator.setDefaults({ ignore: [] }); }
            });
        }

        // ----- Obstacle type selector -----
        (function () {
            var buttons = Array.prototype.slice.call(document.querySelectorAll('[data-obstacle-type]'));
            var hiddenType = document.getElementById('ObstacleType');

            if (!buttons.length || !hiddenType) {
                return;
            }

            function select(value) {
                buttons.forEach(function (btn) {
                    var isSelected = btn.getAttribute('data-obstacle-type') === value;
                    btn.classList.toggle('obstacle-type-selected', isSelected);
                    btn.setAttribute('aria-pressed', isSelected ? 'true' : 'false');
                });
                hiddenType.value = value;
            }

            buttons.forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var value = btn.getAttribute('data-obstacle-type');
                    select(value);
                });
            });

            if (hiddenType.value) {
                select(hiddenType.value);
            }
        })();
        // ----- End obstacle type selector -----

        // ----- Obstacle type info toggle -----
        (function () {
            var toggle = document.getElementById('ObstacleTypeInfoToggle');
            var panel = document.getElementById('ObstacleTypeInfoPanel');

            if (!toggle || !panel) {
                return;
            }

            function showPanel() {
                panel.classList.remove('hidden');
                toggle.setAttribute('aria-expanded', 'true');
            }

            function hidePanel() {
                if (!panel.classList.contains('hidden')) {
                    panel.classList.add('hidden');
                    toggle.setAttribute('aria-expanded', 'false');
                }
            }

            toggle.addEventListener('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                if (panel.classList.contains('hidden')) {
                    showPanel();
                } else {
                    hidePanel();
                }
            });

            panel.addEventListener('click', function (e) {
                e.stopPropagation();
            });

            document.addEventListener('click', function () {
                hidePanel();
            });

            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape') {
                    hidePanel();
                }
            });
        })();
        // ----- End obstacle type info toggle -----

        // Starter kartet og sentrerer f�rst p� Kvadraturen i Kristiansand
        const map = L.map('map').setView([58.1467, 7.9956], 15);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '� OpenStreetMap contributors',
            maxZoom: 16
        }).addTo(map);

        map.locate({ setView: true, maxZoom: 15 });

        map.on('locationfound', function (e) {
            L.circleMarker(e.latlng, {
                radius: 8,
                fillColor: '#007bff',
                color: '#ffffff',
                weight: 2,
                opacity: 1,
                fillOpacity: 1
            }).addTo(map);
        });

        map.on('locationerror', function () {
            alert('Kunne ikke hente posisjonen din.');
        });

        // Holder referanse til markøren + skjult input
        var marker = null;
        var hidden = document.getElementById('ObstacleLocation');
        var hint = document.getElementById('coordsHint');
        var savedObstaclesLayer = L.layerGroup().addTo(map); // Lag for vedvarende (lagrede) hinder
        var formSection = document.getElementById('formSection');
        var mapWrapper = document.getElementById('mapWrapper');
        var pilotMenuEl = document.getElementById('pilotMenu');
        function hidePilotMenu(){ try { if (pilotMenuEl) pilotMenuEl.style.display = 'none'; } catch(_){} }
        var appBody = document.body;
        
        // Check if user is registrar (read-only mode)
        var isReadOnly = @(isRegistrar ? "true" : "false");
        
        if (appBody && mapWrapper && mapWrapper.classList.contains('map-fullscreen')) {
            appBody.classList.add('map-lock');
        }

        // Dynamisk skalering basert på zoom
        function getScaleForZoom(zoom) {
            var baseZoom = 15;
            var scale = Math.pow(1.3, zoom - baseZoom);
            return Math.max(0.3, Math.min(scale, 3));
        }

        function updateAllScales() {
            var zoom = map.getZoom();
            var scale = getScaleForZoom(zoom);
            
            // Oppdater lagrede hinder
            savedObstaclesLayer.eachLayer(function(layer) {
                if (layer instanceof L.CircleMarker) {
                    layer.setRadius(8 * scale);
                } else if (layer instanceof L.Polyline) {
                    layer.setStyle({ weight: 4 * scale });
                }
            });
            
            // Oppdater aktiv linje
            if (polyline) {
                polyline.setStyle({ weight: 4 * scale });
            }
            if (startCircle) startCircle.setRadius(4 * scale);
            if (endCircle) endCircle.setRadius(4 * scale);
        }

        map.on('zoomend', updateAllScales);

        // Enkel modus-velger og state for linje
        var drawMode = 'point'; // 'point' eller 'line'
        var modePoint = document.getElementById('modePoint');
        var modeLine = document.getElementById('modeLine');
        var clearBtn = document.getElementById('clearDrawBtn');
        var linePoints = []; // [ [lat, lng], ... ] - Array som holder koordinater for linjen
        var polyline = null; // Leaflet polyline for visning av linjen på kartet
        var startCircle = null; // Sirkel ved starten av linjen
        var endCircle = null;   // Sirkel ved slutten av linjen
        var lineLocked = false; // Hindrer å legge til flere punkter etter at Done er trykket

        // Lagrer posisjon i JSON-format i skjult input (Point)
        function setLocation(lat, lng) {
            var payload = {
                type: "Point",
                coordinates: [Number(lng.toFixed(6)), Number(lat.toFixed(6))]
            };
            hidden.value = JSON.stringify(payload);
            if (hint) {
                hint.textContent = "Valgt: lat " + lat.toFixed(6) + ", lng " + lng.toFixed(6);
            }

            // Vis skjemaet for å registrere hinder når brukeren har valgt en posisjon på kartet.
            if (formSection && formSection.style.display === 'none') {
                formSection.style.display = 'block';
                formSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                hidePilotMenu();
            }

            if (mapWrapper && mapWrapper.classList.contains('map-fullscreen')) {
                mapWrapper.classList.remove('map-fullscreen');
                if (appBody) {
                    appBody.classList.remove('map-lock');
                }
                if (typeof map !== 'undefined' && map && map.invalidateSize) {
                    setTimeout(function () { map.invalidateSize(); }, 200);
                }
                hidePilotMenu();
            }
        }

        // Lagrer linje i JSON-format (GeoJSON LineString)
        function setLocationLine(points) { // points: [ [lat, lng], ... ]
            if (!points || points.length < 2) { hidden.value = ''; return; }
            // Konverter fra [lat, lng] til [lng, lat] for GeoJSON-format
            var coords = points.map(function (p) { return [Number(p[1].toFixed(6)), Number(p[0].toFixed(6))]; });
            var payload = { type: "LineString", coordinates: coords };
            hidden.value = JSON.stringify(payload);
            if (hint) { hint.textContent = 'Linje med ' + points.length + ' punkter.'; }
            
            // Speiler punkt-oppførselen: avdekk neste skjemaseksjon og avslutt fullskjerm hvis aktiv
            if (formSection && formSection.style.display === 'none') {
                formSection.style.display = 'block';
                formSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                hidePilotMenu();
            }
            if (mapWrapper && mapWrapper.classList.contains('map-fullscreen')) {
                mapWrapper.classList.remove('map-fullscreen');
                if (appBody) { appBody.classList.remove('map-lock'); }
                if (typeof map !== 'undefined' && map && map.invalidateSize) {
                    setTimeout(function () { map.invalidateSize(); }, 200);
                }
                hidePilotMenu();
            }
        }

        // Plasserer eller flytter mark�r p� kartet
        function placeOrMoveMarker(latlng) {
            if (!marker) {
                marker = L.marker(latlng, { draggable: true }).addTo(map);
                marker.on('dragend', function (e) {
                    var p = e.target.getLatLng();
                    setLocation(p.lat, p.lng);
                });
            } else {
                marker.setLatLng(latlng);
            }
            setLocation(latlng.lat, latlng.lng);
        }

        // Når brukeren klikker på kartet, plasser markør eller bygg linje avhengig av modus
        if (!isReadOnly) {
            map.on('click', function (e) {
                // Velg: punkt eller bygg linje
                if (typeof drawMode === 'string' && drawMode === 'line') {
                    if (lineLocked) { return; }
                    var zoom = map.getZoom();
                    var scale = getScaleForZoom(zoom);
                    
                    // Legg til nytt punkt i linjen
                    linePoints.push([e.latlng.lat, e.latlng.lng]);
                    
                    // Opprett eller oppdater polyline
                    if (!polyline) { 
                        polyline = L.polyline(linePoints, { color: 'red', weight: 4 * scale, lineCap: 'butt' }).addTo(map); 
                    } else { 
                        polyline.setLatLngs(linePoints); 
                    }
                    
                    // Oppdater start- og slutt-sirkler
                    if (startCircle) { map.removeLayer(startCircle); startCircle = null; }
                    if (endCircle) { map.removeLayer(endCircle); endCircle = null; }
                    
                    if (linePoints.length > 0) {
                        startCircle = L.circleMarker(linePoints[0], { 
                            radius: 4 * scale, 
                            color: '#000', 
                            weight: 2, 
                            fillColor: 'red', 
                            fillOpacity: 1 
                        }).addTo(map);
                    }
                    
                    if (linePoints.length > 1) {
                        endCircle = L.circleMarker(linePoints[linePoints.length - 1], { 
                            radius: 4 * scale, 
                            color: '#000', 
                            weight: 2, 
                            fillColor: 'red', 
                            fillOpacity: 1 
                        }).addTo(map);
                    }
                    
                    // Oppdater hint-teksten
                    if (linePoints.length >= 2) { 
                        if (hint) hint.textContent = 'Linjepunkter: ' + linePoints.length + '. Trykk Done for å lagre.'; 
                    } else { 
                        hidden.value = ''; 
                        if (hint) hint.textContent = 'Legg til minst 2 punkter for en linje.'; 
                    }
                } else {
                    // Punktmodus - plasser eller flytt markør
                    placeOrMoveMarker(e.latlng);
                }
            });
        } else {
            // For registrars, just show coordinates in hint without showing form
            map.on('click', function (e) {
                if (hint) {
                    hint.textContent = "Lat: " + e.latlng.lat.toFixed(6) + ", Lng: " + e.latlng.lng.toFixed(6) + " (View only)";
                }
            });
        }

        // ---------------- Lagre hinder, etter innsending (localStorage) ----------------
        const LS_KEY = 'persisted_obstacles_v1';

        // Laster inn alle lagrede hinder fra localStorage
        function loadSavedObstacles() {
            try {
                var raw = localStorage.getItem(LS_KEY);
                return raw ? JSON.parse(raw) : [];
            } catch (_) { return []; }
        }

        // Lagrer alle hinder til localStorage
        function saveAll(obstacles) {
            try { localStorage.setItem(LS_KEY, JSON.stringify(obstacles)); } catch (_) { /* ignore */ }
        }

        // Beregner lengden av en linje ved hjelp av Haversine-formelen (i meter)
        function calculateLineLength(coordinates) {
            if (!coordinates || coordinates.length < 2) return 0;
            
            var totalLength = 0;
            for (var i = 0; i < coordinates.length - 1; i++) {
                var lat1 = coordinates[i][0];
                var lng1 = coordinates[i][1];
                var lat2 = coordinates[i + 1][0];
                var lng2 = coordinates[i + 1][1];
                
                // Haversine-formel for å beregne avstanden mellom to punkter
                var R = 6371000; // Jordens radius i meter
                var dLat = (lat2 - lat1) * Math.PI / 180;
                var dLng = (lng2 - lng1) * Math.PI / 180;
                var a = Math.sin(dLat / 2) * Math.sin(dLat / 2) +
                        Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) *
                        Math.sin(dLng / 2) * Math.sin(dLng / 2);
                var c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
                var distance = R * c;
                
                totalLength += distance;
            }
            
            return totalLength;
        }

        // Hjelpefunksjon: Formater verdi med enhet
        function formatValue(val) {
            return (val !== null && val !== undefined && val !== '') ? (val + ' m') : 'Ikke spesifisert';
        }

        // Hjelpefunksjon: Lag popup HTML
        function buildPopupHtml(label, h, w, lengthText) {
            var html = '<div style="min-width:180px">' +
                '<div><strong>Type:</strong> ' + label + '</div>' +
                '<div><strong>Høyde:</strong> ' + h + '</div>';
            if (lengthText) html += '<div><strong>Lengde:</strong> ' + lengthText + '</div>';
            html += '<div><strong>Bredde:</strong> ' + w + '</div></div>';
            return html;
        }

        // Hjelpefunksjon: Lag tooltip tekst
        function buildTooltip(label, h, w, lengthText) {
            var text = label + ' - H:' + h;
            if (lengthText) text += ' - L:' + lengthText;
            if (w !== 'Ikke spesifisert') text += ' - B:' + w;
            return text;
        }

        // Hjelpefunksjon: Lag endepunkt-sirkel
        function addEndpointCircle(latlng, label) {
            L.circleMarker(latlng, {
                radius: 5, color: '#000', weight: 2, fillColor: '#dc2626', fillOpacity: 1
            }).bindTooltip(label, { permanent: false }).addTo(savedObstaclesLayer);
        }

        // Load obstacles from database
        async function loadObstaclesFromDatabase() {
            try {
                const response = await fetch('/api/obstacles');
                if (!response.ok) return [];
                const reports = await response.json();
                return reports.map(r => {
                    try {
                        const location = typeof r.location === 'string' ? JSON.parse(r.location) : r.location;
                        if (location.type === 'Point' && location.coordinates) {
                            return {
                                id: r.id,
                                type: r.type,
                                height: r.height,
                                lat: location.coordinates[1],
                                lng: location.coordinates[0]
                            };
                        } else if (location.type === 'LineString' && location.coordinates) {
                            return {
                                id: r.id,
                                type: r.type,
                                height: r.height,
                                geometry: location
                            };
                        }
                    } catch (e) {
                        console.warn('Failed to parse location for report', r.id, e);
                    }
                    return null;
                }).filter(o => o !== null);
            } catch (e) {
                console.error('Failed to load obstacles from database', e);
                return [];
            }
        }

        // Updated render function that loads from database
        async function renderSavedObstacles() {
            savedObstaclesLayer.clearLayers();
            var zoom = map.getZoom();
            var scale = getScaleForZoom(zoom);
            
            // Load from database instead of localStorage
            const obstacles = await loadObstaclesFromDatabase();
            
            obstacles.forEach(function (o) {
                if (!o) return;
                
                var label = o.type || 'Obstacle';
                var h = formatValue(o.height);
                var w = formatValue(null); // Width not stored in database
                
                // Handle LineString obstacles
                if (o.geometry && o.geometry.type === 'LineString' && o.geometry.coordinates) {
                    var latlngs = o.geometry.coordinates.map(function(c) { return [c[1], c[0]]; });
                    var lengthText = (function(len) {
                        return len >= 1000 ? (len / 1000).toFixed(2) + ' km' : len.toFixed(2) + ' m';
                    })(calculateLineLength(latlngs));
                    
                    var polyline = L.polyline(latlngs, { color: '#dc2626', weight: 4 * scale, opacity: 0.8, lineCap: 'butt' });
                    polyline.bindPopup(buildPopupHtml(label, h, w, lengthText));
                    polyline.bindTooltip(buildTooltip(label, h, w, lengthText), { sticky: true });
                    polyline.addTo(savedObstaclesLayer);
                    
                    // Add start/end markers
                    if (latlngs.length > 0) {
                        L.circleMarker(latlngs[0], { 
                            radius: 5 * scale, 
                            color: '#000', 
                            weight: 2, 
                            fillColor: '#dc2626', 
                            fillOpacity: 1 
                        }).bindTooltip('Start', { permanent: false }).addTo(savedObstaclesLayer);
                    }
                    if (latlngs.length > 1) {
                        L.circleMarker(latlngs[latlngs.length - 1], { 
                            radius: 5 * scale, 
                            color: '#000', 
                            weight: 2, 
                            fillColor: '#dc2626', 
                            fillOpacity: 1 
                        }).bindTooltip('Slutt', { permanent: false }).addTo(savedObstaclesLayer);
                    }
                }
                // Handle Point obstacles
                else if (typeof o.lat === 'number' && typeof o.lng === 'number') {
                    var cm = L.circleMarker([o.lat, o.lng], {
                        radius: 8 * scale, color: '#b91c1c', weight: 2, fillColor: '#dc2626', fillOpacity: 0.8
                    });
                    cm.bindPopup(buildPopupHtml(label, h, w));
                    cm.bindTooltip(buildTooltip(label, h, w), { sticky: true });
                    cm.addTo(savedObstaclesLayer);
                }
            });
        }

        // Update the initial call to be async
        renderSavedObstacles();

        // Lokaliserer posisjon
        L.control.locate().addTo(map);

        // Leaflet-kontroll inne i kartet: Point / Linear / Done / Clear
        (function(){
            var ctrl = L.control({ position: 'topleft' });
            ctrl.onAdd = function(map){
                var container = L.DomUtil.create('div', 'leaflet-bar');

                // Punkt-knapp
                var btnPoint = L.DomUtil.create('a', 'mode-btn', container);
                btnPoint.href = '#'; btnPoint.title = 'Punkt'; btnPoint.setAttribute('aria-label','Punkt');
                // Bruker Leaflets standard markør-ikon for et kjent utseende
                btnPoint.innerHTML = '<img src="https://unpkg.com/leaflet@1.9.4/dist/images/marker-icon.png" alt="Punkt">';

                // Linje-knapp
                var btnLine = L.DomUtil.create('a', 'mode-btn', container);
                btnLine.href = '#'; btnLine.title = 'Linje'; btnLine.setAttribute('aria-label','Linje');
                btnLine.innerHTML = '\n<svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">\n  <path d="M4 16 L20 8" stroke="red" stroke-width="3" stroke-linecap="butt" fill="none"/>\n  <circle cx="4" cy="16" r="3" fill="red" stroke="#111" stroke-width="2"/>\n  <circle cx="20" cy="8" r="3" fill="red" stroke="#111" stroke-width="2"/>\n</svg>\n';

                // Ferdig-knapp (Done)
                var btnDone = L.DomUtil.create('a', 'mode-btn', container);
                btnDone.href = '#'; btnDone.title = 'Ferdig'; btnDone.setAttribute('aria-label','Ferdig');
                btnDone.innerHTML = '\n<svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">\n  <path d="M5 13 L9 17 L19 7" stroke="#111" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>\n</svg>\n';

                // Slett-knapp (Clear)
                var btnClear = L.DomUtil.create('a', 'mode-btn', container);
                btnClear.href = '#'; btnClear.title = 'Slett'; btnClear.setAttribute('aria-label','Slett');
                btnClear.innerHTML = '\n<svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">\n  <path d="M6 6 L18 18 M18 6 L6 18" stroke="#111" stroke-width="2" stroke-linecap="round"/>\n</svg>\n';

                // Oppdater hvilken knapp som er aktiv
                function updateActive(){
                    btnPoint.classList.toggle('active', drawMode === 'point');
                    btnLine.classList.toggle('active', drawMode === 'line');
                }

                // Hendelseshåndterere for knappene
                L.DomEvent.on(btnPoint, 'click', function(e){ 
                    L.DomEvent.preventDefault(e); 
                    setMode('point'); 
                    updateActive(); 
                });
                
                L.DomEvent.on(btnLine,  'click', function(e){ 
                    L.DomEvent.preventDefault(e); 
                    setMode('line');  
                    updateActive(); 
                });
                
                L.DomEvent.on(btnDone,  'click', function(e){
                    L.DomEvent.preventDefault(e);
                    if (drawMode === 'line') {
                        if (linePoints.length >= 2) {
                            setLocationLine(linePoints);
                            lineLocked = true;
                            if (hint) hint.textContent = 'Linje lagret. Du kan sende inn skjemaet eller trykke Slett for å redigere.';
                        } else {
                            if (hint) hint.textContent = 'Legg til minst 2 punkter for å fullføre en linje.';
                        }
                    } else {
                        if (hint) hint.textContent = 'Bytt til Linje-modus for å tegne en linje.';
                    }
                });
                
                L.DomEvent.on(btnClear, 'click', function(e){
                    L.DomEvent.preventDefault(e);
                    // Slett både punkt og linje
                    if (marker) { map.removeLayer(marker); marker = null; }
                    if (polyline) { map.removeLayer(polyline); polyline = null; }
                    if (startCircle) { map.removeLayer(startCircle); startCircle = null; }
                    if (endCircle) { map.removeLayer(endCircle); endCircle = null; }
                    linePoints = [];
                    hidden.value = '';
                    if (hint) hint.textContent = (drawMode === 'line') ? 'Linje-modus: klikk for å legge til punkter.' : 'Klikk på kartet for å plassere en markør.';
                    lineLocked = false;
                });

                // Hindrer at klikk på kontrollen bobler til kartet
                L.DomEvent.disableClickPropagation(container);
                L.DomEvent.disableScrollPropagation(container);

                updateActive();
                return container;
            };
            ctrl.addTo(map);
        })();

        // Bytte modus
        function setMode(mode) {
            drawMode = mode;
            if (mode === 'point') {
                // Rydd bort linje når vi bytter til punktmodus
                linePoints = [];
                if (polyline) { map.removeLayer(polyline); polyline = null; }
                if (startCircle) { map.removeLayer(startCircle); startCircle = null; }
                if (endCircle) { map.removeLayer(endCircle); endCircle = null; }
                hidden.value = '';
                if (hint) hint.textContent = 'Klikk på kartet for å plassere en markør.';
                lineLocked = false;
            } else {
                // Fjern punkt-markør når vi bytter til linjemodus
                if (marker) { map.removeLayer(marker); marker = null; }
                hidden.value = '';
                if (hint) hint.textContent = 'Linje-modus: klikk for å legge til punkter.';
                lineLocked = false;
            }
        }


        // ----- Height unit toggle (Meters <-> Feet) -----
        (function () {
            var hiddenMeters = document.getElementById('ObstacleHeight');
            var displayInput = document.getElementById('ObstacleHeightDisplay');
            var unitToggle = document.getElementById('unitToggle');
            var unitText = document.getElementById('unitText');
            var displayValue = document.getElementById('ObstacleHeightValue');
            var valueUnitText = document.getElementById('ObstacleHeightDisplayUnit');

            var M_TO_FT = 3.28084;
            var currentUnit = 'm'; // 'm' for meters, 'ft' for feet

            // Safety guard: if any element is missing, skip setup to avoid runtime errors
            if (!hiddenMeters || !displayInput || !unitToggle || !unitText) {
                return;
            }

            // Read range from MVC unobtrusive attributes if present; fallback to 0..200
            var minMetersAttr = hiddenMeters ? hiddenMeters.getAttribute('data-val-range-min') : null;
            var maxMetersAttr = hiddenMeters ? hiddenMeters.getAttribute('data-val-range-max') : null;
            var minMeters = (minMetersAttr !== null && minMetersAttr !== '') ? parseFloat(minMetersAttr) : 0;
            var maxMeters = (maxMetersAttr !== null && maxMetersAttr !== '') ? parseFloat(maxMetersAttr) : 200;

            function parseNumber(val) {
                if (val === null || val === undefined) return NaN;
                // Replace comma with dot for decimal if needed
                var s = String(val).replace(',', '.').trim();
                var n = parseFloat(s);
                return isNaN(n) ? NaN : n;
            }

            function roundTo(n, decimals) {
                var p = Math.pow(10, decimals);
                return Math.round(n * p) / p;
            }

            function updateHiddenFromDisplay() {
                var v = parseNumber(displayInput.value);
                if (isNaN(v)) {
                    hiddenMeters.value = '';
                    if (displayValue) {
                        displayValue.textContent = '';
                    }
                    return;
                }
                if (currentUnit === 'm') {
                    hiddenMeters.value = v;
                } else {
                    hiddenMeters.value = roundTo(v / M_TO_FT, 6);
                }
                if (displayValue) {
                    displayValue.textContent = displayInput.value;
                }
            }

            function syncDisplayFromHidden() {
                var m = parseNumber(hiddenMeters.value);
                if (isNaN(m)) {
                    displayInput.value = minMeters;
                    if (displayValue) {
                        displayValue.textContent = displayInput.value;
                    }
                    return;
                }
                if (currentUnit === 'm') {
                    displayInput.value = m;
                } else {
                    displayInput.value = roundTo(m * M_TO_FT, 2);
                }
                if (displayValue) {
                    displayValue.textContent = displayInput.value;
                }
            }

            // Dynamic validation message reflecting the selected unit and server-side bounds
            var valSpan = document.querySelector('span[data-valmsg-for="ObstacleHeight"]');
            function updateValidationMessage() {
                if (!valSpan) return;
                var hasError = valSpan.textContent && valSpan.textContent.trim().length > 0;
                if (!hasError) return;
                if (currentUnit === 'ft') {
                    var minFt = Math.round(minMeters * M_TO_FT);
                    var maxFt = Math.round(maxMeters * M_TO_FT);
                    valSpan.textContent = 'Height must be between ' + minFt + ' and ' + maxFt + ' feet.';
                } else {
                    valSpan.textContent = 'Height must be between ' + minMeters + ' and ' + maxMeters + ' meters.';
                }
            }

            function setUnit(unit) {
                unitText.textContent = unit === 'm' ? 'Meters' : 'Feet';
                if (valueUnitText) {
                    valueUnitText.textContent = unit === 'm' ? 'meters' : 'feet';
                }
                if (displayInput) {
                    displayInput.placeholder = unit === 'm' ? 'e.g., 2.5' : 'e.g., 8.2';
                }
                if (unit === currentUnit) {
                    syncDisplayFromHidden();
                    updateValidationMessage();
                    return;
                }
                // Convert the displayed value to the new unit while keeping the same real height
                currentUnit = unit;
                if (unit === 'm') {
                    displayInput.min = minMeters;
                    displayInput.max = maxMeters;
                    displayInput.step = 0.1;
                } else {
                    displayInput.min = roundTo(minMeters * M_TO_FT, 2);
                    displayInput.max = roundTo(maxMeters * M_TO_FT, 2);
                    displayInput.step = 0.5;
                }
                syncDisplayFromHidden();
                updateValidationMessage();
            }

            // Initialize from server value (meters)
            displayInput.min = minMeters;
            displayInput.max = maxMeters;
            displayInput.step = 0.1;
            setUnit(unitToggle.checked ? 'ft' : 'm');

            // Events
            displayInput.addEventListener('input', function(){
                updateHiddenFromDisplay();
                updateValidationMessage();
            });
            unitToggle.addEventListener('change', function () {
                setUnit(unitToggle.checked ? 'ft' : 'm');
            });

            // Ensure meters posted on submit even if user toggled to feet
            var form = displayInput.form;
            if (form) {
                form.addEventListener('submit', function () {
                    // Oppdater skjult felt fra display-verdi rett før innsending
                    updateHiddenFromDisplay();
                    try {
                        // Hent nåværende hinderdetaljer slik at de vedvarer på tvers av refresh
                        var typeEl = document.getElementById('ObstacleType');
                        var widthEl = document.getElementById('ObstacleWidthDisplay');
                        var locRaw = hidden.value ? JSON.parse(hidden.value) : null;
                        
                        if (locRaw) {
                            var obstacles = loadSavedObstacles();
                            var obstacleData = {
                                id: Date.now(),
                                type: typeEl ? typeEl.value : 'Obstacle',
                                height: hiddenMeters && hiddenMeters.value !== '' ? Number(hiddenMeters.value) : null,
                                width: widthEl && widthEl.value !== '' ? Number(widthEl.value) : null
                            };
                            
                            // Sjekk om dette er et punkt-hinder (Point)
                            if (locRaw.type === 'Point' && Array.isArray(locRaw.coordinates) && locRaw.coordinates.length === 2) {
                                var lng = Number(locRaw.coordinates[0]);
                                var lat = Number(locRaw.coordinates[1]);
                                
                                if (typeof lat === 'number' && !isNaN(lat) && typeof lng === 'number' && !isNaN(lng)) {
                                    obstacleData.lat = lat;
                                    obstacleData.lng = lng;
                                    obstacles.push(obstacleData);
                                }
                            }
                            // Sjekk om dette er et linje-hinder (LineString)
                            else if (locRaw.type === 'LineString' && Array.isArray(locRaw.coordinates) && locRaw.coordinates.length >= 2) {
                                // Lagre hele geometrien for linjen
                                obstacleData.geometry = {
                                    type: 'LineString',
                                    coordinates: locRaw.coordinates
                                };
                                obstacles.push(obstacleData);
                            }
                            
                            // Lagre alle hinder og oppdater kartet
                            saveAll(obstacles);
                            renderSavedObstacles();
                        }
                    } catch (_) { /* ignore */ }
                });
            }

            // Observe changes to the validation span (when jQuery Validate updates it)
            if (valSpan && 'MutationObserver' in window) {
                var observer = new MutationObserver(function () { updateValidationMessage(); });
                observer.observe(valSpan, { childList: true, characterData: true, subtree: true });
            }
        })();
        // ----- End unit toggle -----

        // Cleaned up: no extra JS for slider fill
        // Also hide drawing controls for registrars
        @if (isRegistrar)
        {
            <text>
            document.addEventListener('DOMContentLoaded', function() {
                var modeControls = document.querySelectorAll('.mode-btn, .leaflet-bar');
                // Keep zoom controls, but you might want to hide specific drawing buttons
                // This depends on how the controls are structured
            });
            </text>
        }

    </script>
