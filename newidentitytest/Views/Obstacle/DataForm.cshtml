@model newidentitytest.Models.ObstacleData

@{
    ViewData["Title"] = "Register Obstacle";
}

<section class="mx-auto max-w-2xl">
    <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-6">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=info" />

<!-- Kartseksjon for å velge posisjon (map first) -->
<section id="mapWrapper" class="mx-auto max-w-2xl map-fullscreen">
    <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-6 map-card">
        <header class="mb-6">
            <h1 class="text-2xl font-semibold">Obstacle Registration Form</h1>
            <p class="text-gray-600 mt-1">Please register an obstacle</p>
        </header>

        <!-- Skjema for å registrere hinder -->
        <form asp-action="DataForm" method="post" class="space-y-5">
            <!-- Viser feilmeldinger hvis valideringen feiler -->
            <div asp-validation-summary="ModelOnly" class="text-sm text-red-600"></div>

            <!-- Skjult input som lagrer posisjon fra kartet, trenger denne for at serveren skal vite hvor brukeren trykket på kartet -->
            <!-- Endret til visuelt skjult tekstfelt slik at jQuery Validate ikke ignorerer det -->
            <input type="text" asp-for="ObstacleLocation" id="ObstacleLocation"
                   style="position:absolute;left:-10000px;top:auto;width:1px;height:1px;overflow:hidden;"
                   aria-hidden="true" tabindex="-1" />
            <span asp-validation-for="ObstacleLocation" class="text-sm text-red-600"></span>

            <div class="grid gap-5 sm:grid-cols-2">
                <div class="sm:col-span-2">
                    <div class="flex items-center justify-between gap-3 mb-1">
                        <label class="block text-sm font-medium text-gray-800">Velg hindertype</label>
                        <button type="button" id="ObstacleTypeInfoToggle" class="material-symbols-outlined text-gray-500 hover:text-gray-700 transition-colors"
                                aria-expanded="false" aria-controls="ObstacleTypeInfoPanel" title="Vis informasjon om hindertyper">
                            info
                        </button>
                    </div>
                    <p class="text-sm text-gray-600 mb-3">Klikk på informasjonsikonet for å se eksempler knyttet til hver hindertype.</p>
                    <div id="ObstacleTypeInfoPanel" class="hidden mt-3 rounded-xl border border-gray-200 bg-slate-50 p-4 text-sm text-gray-700 shadow-sm">
                        <p class="font-semibold text-gray-800">Eksempler per hindertype</p>
                        <div class="mt-3 space-y-4">
                            <div>
                                <h3 class="font-semibold text-gray-800">Punkt</h3>
                                <ul class="mt-1 list-disc list-inside space-y-1">
                                    <li>Annet</li>
                                    <li>Bygning</li>
                                    <li>Flaggstang</li>
                                    <li>ForankretBallong</li>
                                    <li>Fornøyelsesparkinnretning</li>
                                    <li>Fyrtårn</li>
                                    <li>Hopptårn</li>
                                    <li>Kjøletårn</li>
                                    <li>Kontrolltårn</li>
                                    <li>Kraftverk</li>
                                    <li>Kran</li>
                                    <li>Kuppel</li>
                                    <li>Monument</li>
                                    <li>Navigasjonshjelpemiddel</li>
                                    <li>Petroleumsinnretning</li>
                                    <li>Pipe</li>
                                    <li>Raffineri</li>
                                    <li>Silo</li>
                                    <li>Sprengningstårn</li>
                                    <li>Tank</li>
                                    <li>Tårn</li>
                                    <li>Vanntårn</li>
                                    <li>Vindturbin</li>
                                </ul>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-800">Mast</h3>
                                <ul class="mt-1 list-disc list-inside space-y-1">
                                    <li>Annet</li>
                                    <li>Belysningsmast</li>
                                    <li>Ekommast</li>
                                    <li>Høgspentmast</li>
                                    <li>Kontaktledningsmast</li>
                                    <li>Lavspentmast</li>
                                    <li>Målemast</li>
                                    <li>Radiomast</li>
                                    <li>Taubanemast</li>
                                    <li>Telemast</li>
                                    <li>Transmisjonmast</li>
                                    <li>Regionalmast</li>
                                </ul>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-800">Luftspenn</h3>
                                <ul class="mt-1 list-disc list-inside space-y-1">
                                    <li>Annet</li>
                                    <li>Bardun</li>
                                    <li>Gondolbane</li>
                                    <li>Ekom</li>
                                    <li>Høgspent</li>
                                    <li>Transmisjon</li>
                                    <li>Regional</li>
                                    <li>Kontaktledning</li>
                                    <li>Lavspent</li>
                                    <li>Løypestreng</li>
                                    <li>Skitrekk</li>
                                    <li>Stolheis</li>
                                    <li>Taubane</li>
                                    <li>Vaier</li>
                                    <li>Zipline</li>
                                </ul>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-800">Linje</h3>
                                <ul class="mt-1 list-disc list-inside space-y-1">
                                    <li>Annet</li>
                                    <li>Bru</li>
                                    <li>Demning</li>
                                    <li>Gjerde</li>
                                </ul>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-800">Flate</h3>
                                <ul class="mt-1 list-disc list-inside space-y-1">
                                    <li>Kontaktledning</li>
                                    <li>Trafostasjon</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <input asp-for="ObstacleType" type="hidden" id="ObstacleType" />
                    <input asp-for="ObstacleName" type="hidden" id="ObstacleName" />
                    <div id="ObstacleTypeOptions" class="flex flex-col gap-3">
                        <div class="grid gap-3 sm:grid-cols-2">
                            <button type="button" class="obstacle-type-button" data-obstacle-type="Punkt" aria-pressed="false">
                                <span class="obstacle-type-label">Punkt</span>
                            </button>
                            <button type="button" class="obstacle-type-button" data-obstacle-type="Mast" aria-pressed="false">
                                <span class="obstacle-type-label">Mast</span>
                            </button>
                            <button type="button" class="obstacle-type-button" data-obstacle-type="Luftspenn" aria-pressed="false">
                                <span class="obstacle-type-label">Luftspenn</span>
                            </button>
                            <button type="button" class="obstacle-type-button" data-obstacle-type="Linje" aria-pressed="false">
                                <span class="obstacle-type-label">Linje</span>
                            </button>
                        </div>
                        <button type="button" class="obstacle-type-button obstacle-type-button-wide" data-obstacle-type="Flate" aria-pressed="false">
                            <span class="obstacle-type-label">Flate</span>
                        </button>
                    </div>
                    <span asp-validation-for="ObstacleType" class="text-sm text-red-600"></span>
                </div>

                <!-- Høyde på hinder -->
                <div>
                    <label class="block text-sm font-medium text-gray-800 mb-1">
                        Obstacle Height (<span id="unitText">Meters</span>)
                    </label>
                    <!-- Hidden, model-bound input stores meters for server-side validation -->
                    <input asp-for="ObstacleHeight" type="hidden" id="ObstacleHeight" />

                    <!-- Visible slider controlling the height; value shown below -->
                    <input id="ObstacleHeightDisplay" type="range" min="0" max="200" step="0.1"
                           class="w-full accent-indigo-600" aria-describedby="ObstacleHeightValue ObstacleHeightDisplayUnit" />
                    <div class="mt-2 text-sm text-gray-600">
                        <span id="ObstacleHeightValue">0.0</span> <span id="ObstacleHeightDisplayUnit">meters</span>
                    </div>

                    <!-- Simple on/off switch for ft/m -->
                    <div class="mt-1 flex items-center justify-start gap-2">
                        <label class="switch" title="Toggle feet/meters">
                            <input id="unitToggle" type="checkbox" aria-label="Toggle feet/meters">
                            <span class="slider round"></span>
                        </label>
                        <div class="text-xs text-gray-600 select-none">ft / m</div>
                    </div>

                    <span asp-validation-for="ObstacleHeight" class="text-sm text-red-600"></span>
                </div>

                <!-- Bredde på hinder (valgfri, kun for visning i kart) -->
                <div>
                    <label class="block text-sm font-medium text-gray-800 mb-1">
                        Obstacle Width (optional, meters)
                    </label>
                    <input id="ObstacleWidthDisplay" type="number" step="any"
                           class="block w-full rounded-md border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2"
                           placeholder="e.g., 1.2" />
                    <div class="text-xs text-gray-600 mt-1">Only stored locally for map display.</div>
                </div>
            </div>

            <!-- Beskrivelse av hinder -->
            <div class="sm:col-span-2">
                <label asp-for="ObstacleDescription" class="block text-sm font-medium text-gray-800 mb-1">Obstacle Description</label>
                <textarea asp-for="ObstacleDescription" rows="4"
                          class="block w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2"
                          placeholder="Describe the obstacle, materials, location, etc."></textarea>
                <span asp-validation-for="ObstacleDescription" class="text-sm text-red-600"></span>
            </div>

            <!-- Knapp for å sende inn skjemaet -->
            <div class="pt-2">
                <button type="submit"
                        class="inline-flex items-center justify-center rounded-lg bg-indigo-600 px-4 py-2 text-white hover:bg-indigo-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    Submit Data
                </button>
            </div>
        </form>
    </div>
</section>


