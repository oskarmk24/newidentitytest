    #mapWrapper.map-fullscreen .map-card { position: relative; width: 100%; height: 100%; max-width: none; border: none; border-radius: 0; padding: 0; box-shadow: none; background: transparent; display: flex; flex-direction: column; }
    #mapWrapper.map-fullscreen header { position: absolute; top: 1.5rem; left: 1.5rem; margin: 0; padding: 0.75rem 1.25rem; border-radius: 0.75rem; background-color: rgba(15, 23, 42, 0.75); color: #f8fafc; z-index: 40; }
    #mapWrapper.map-fullscreen #coordsHint { position: absolute; bottom: 1.5rem; left: 1.5rem; margin: 0; padding: 0.65rem 1rem; border-radius: 0.75rem; background-color: rgba(15, 23, 42, 0.65); color: #e2e8f0; z-index: 40; }
