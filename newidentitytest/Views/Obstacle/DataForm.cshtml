<!-- Kartseksjon for å velge posisjon (map first) -->
<section id="mapWrapper" class="mx-auto max-w-2xl map-fullscreen">
    <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-6 map-card">
        <header class="mb-6">
            <h1 class="text-2xl font-semibold">@(isRegistrar ? "Obstacle Reports Map" : "Map")</h1>
        </header>

        <!-- Selve kartet -->
        <div id="map"></div>

        <!-- Hint-tekst som oppdateres når bruker klikker i kartet -->
        <div id="coordsHint" class="mt-2 text-sm text-gray-600">
            @if (isRegistrar)
            {
                <text>View all obstacle reports on the map (read-only)</text>
            }
            else
            {
                <text>Click the map to drop a pin.</text>
            }
        </div>
    </div>
</section>

