        @* Toggle fullscreen map view functionality *@
        function toggleFullscreenMap() {
            if (!mapWrapper) return;
            
            var isFullscreen = mapWrapper.classList.contains('map-fullscreen');
            
            if (isFullscreen) {
                @* Exit fullscreen mode *@
                mapWrapper.classList.remove('map-fullscreen');
                if (appBody) {
                    appBody.classList.remove('map-lock');
                }
                // Update icon
                if (minimizeIcon) minimizeIcon.style.display = 'none';
                if (maximizeIcon) maximizeIcon.style.display = 'block';
            } else {
                @* Enter fullscreen mode *@
                mapWrapper.classList.add('map-fullscreen');
                if (appBody) {
                    appBody.classList.add('map-lock');
                }
                // Update icon
                if (minimizeIcon) minimizeIcon.style.display = 'block';
                if (maximizeIcon) maximizeIcon.style.display = 'none';
            }
            
            @* Invalidate map size after transition to ensure proper rendering *@
            if (typeof map !== 'undefined' && map && map.invalidateSize) {
                setTimeout(function () { map.invalidateSize(); }, 300);
            }
        }
        
        @* Add click handler for fullscreen toggle button *@
        if (toggleMapButton) {
            toggleMapButton.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                toggleFullscreenMap();
            });
        }
        
        @* Initialize icon display based on initial fullscreen state *@
        if (mapWrapper && mapWrapper.classList.contains('map-fullscreen')) {
            if (minimizeIcon) minimizeIcon.style.display = 'block';
            if (maximizeIcon) maximizeIcon.style.display = 'none';
        } else {
            if (minimizeIcon) minimizeIcon.style.display = 'none';
            if (maximizeIcon) maximizeIcon.style.display = 'block';
        }

        @* Load and restore existing ObstacleLocation when editing a draft *@
        (function() {
            var existingLocation = @Html.Raw(Json.Serialize(Model?.ObstacleLocation ?? ""));
            
            if (existingLocation && typeof existingLocation === 'string' && existingLocation.trim() !== '') {
                try {
                    var geo = JSON.parse(existingLocation);
                    
                    if (geo && geo.type === 'LineString' && Array.isArray(geo.coordinates) && geo.coordinates.length >= 2) {
                        @* Convert from GeoJSON [lng, lat] to Leaflet [lat, lng] format *@
                        var latlngs = geo.coordinates.map(function(c) { 
                            return [c[1], c[0]]; 
                        });
                        
                        @* Set to line mode and restore line points *@
                        setMode('line');
                        if (modeLine) modeLine.click();
                        
                        @* Restore line state *@
                        linePoints = latlngs;
                        lineLocked = true;
                        
                        @* Draw the restored polyline on map *@
                        polyline = L.polyline(latlngs, { 
                            color: '#dc2626', 
                            weight: 4 * getScaleForZoom(map.getZoom()), 
                            opacity: 0.8, 
                            lineCap: 'butt' 
                        }).addTo(map);
                        
                        @* Add start and end circle markers *@
                        if (latlngs.length > 0) {
                            startCircle = L.circleMarker(latlngs[0], {
                                radius: 4 * getScaleForZoom(map.getZoom()),
                                fillColor: '#10b981',
                                color: '#ffffff',
                                weight: 2,
                                opacity: 1,
                                fillOpacity: 1
                            }).addTo(map);
                            
                            endCircle = L.circleMarker(latlngs[latlngs.length - 1], {
                                radius: 4 * getScaleForZoom(map.getZoom()),
                                fillColor: '#ef4444',
                                color: '#ffffff',
                                weight: 2,
                                opacity: 1,
                                fillOpacity: 1
                            }).addTo(map);
                        }
                        
                        @* Fit map bounds to show entire line *@
                        if (polyline) {
                            map.fitBounds(polyline.getBounds(), { padding: [50, 50] });
                        }
                        
                        @* Update hint text *@
                        if (hint) {
                            hint.textContent = 'Linje med ' + latlngs.length + ' punkter (lastet fra draft).';
                        }
                        
                        @* Show form section *@
                        if (formSection) {
                            formSection.style.display = 'block';
                        }
                    } else if (geo && geo.type === 'Point' && Array.isArray(geo.coordinates) && geo.coordinates.length >= 2) {
                        @* Handle Point type obstacle *@
                        var lat = geo.coordinates[1];
                        var lng = geo.coordinates[0];
                        
                        @* Set to point mode and place marker *@
                        setMode('point');
                        if (modePoint) modePoint.click();
                        
                        @* Place marker at saved location *@
                        placeOrMoveMarker([lat, lng]);
                        
                        @* Center map on point location *@
                        map.setView([lat, lng], 15);
                        
                        @* Show form section *@
                        if (formSection) {
                            formSection.style.display = 'block';
                        }
                    }
                } catch (e) {
                    console.warn('Could not parse existing ObstacleLocation:', e);
                }
            }
        })();

    </script>
}
