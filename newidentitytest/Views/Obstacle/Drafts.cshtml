@model IEnumerable<newidentitytest.Models.Report>
@{
    ViewData["Title"] = "My Drafts";
}

<section class="container mx-auto">
    <header class="mb-4">
        <h1 class="text-2xl font-semibold">My Drafts (@Model.Count())</h1>
    </header>

    @if (TempData["Success"] != null)
    {
        <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
            @TempData["Success"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-12 bg-white rounded-lg shadow-sm ring-1 ring-gray-200">
            <p class="text-gray-600">No drafts yet.</p>
        </div>
    }
    else
    {
        <div class="overflow-x-auto rounded-xl ring-1 ring-gray-200 bg-white">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var draft in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">#@draft.Id</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">@(draft.ObstacleType ?? "-")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@draft.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <a asp-action="EditDraft" asp-route-id="@draft.Id" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
