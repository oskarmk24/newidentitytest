@* 
    Hinderregistreringsbekreftelse/oversiktsside.
    Viser innsendte hinderdata inkludert type, høyde, beskrivelse og plassering på et kart.
    Viser både Punkt og Linje hindringer med passende visualisering.
*@
@model newidentitytest.Models.ObstacleData

@{
    ViewData["Title"] = "Overview";
}

<section class="mx-auto max-w-2xl">
    <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-6 space-y-4">
        <header>
            <h1 class="text-2xl font-semibold">Overview</h1>
            <p class="text-gray-600 mt-1">Thank you for registering an obstacle</p>
        </header>

        @* Display submitted obstacle data *@
        <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            @* Obstacle type *@
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Obstacle Type</dt>
                <dd class="mt-1 text-base text-gray-900 break-words">@(!string.IsNullOrWhiteSpace(Model.ObstacleType) ? Model.ObstacleType : "")</dd>
            </div>

            @* Obstacle height (displayed in both meters and feet) *@
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Height</dt>
                <dd class="mt-1 text-base text-gray-900">
                    @{
                        decimal meters = Model.ObstacleHeight;
                        decimal feet = meters * 3.28084m; // 1 m = 3.28084 ft
                        var heightDisplay = $"{meters:0.#} m ({feet:0.#} ft)";
                    }
                    @heightDisplay
                </dd>
            </div>

            @* Obstacle description *@
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Description</dt>
                <dd class="mt-1 text-base text-gray-900 break-words sm:col-span-3">@Model.ObstacleDescription</dd>
            </div>
        </dl>

        @if (!string.IsNullOrWhiteSpace(Model.ObstacleLocation))
        {
            <div class="mt-4 space-y-2">
                <p><strong>Location:</strong> 
                    @{ @* Deserialize location and display formatted coordinates *@
                        try
                        {
                            var geo = System.Text.Json.JsonSerializer.Deserialize<System.Text.Json.JsonElement>(Model.ObstacleLocation);
                            string type = geo.TryGetProperty("type", out var tEl) ? tEl.GetString() : null;
                            if (string.Equals(type, "LineString", System.StringComparison.OrdinalIgnoreCase))
                            {
                                var coords = geo.GetProperty("coordinates");
                                var parts = new System.Collections.Generic.List<string>();
                                foreach (var p in coords.EnumerateArray())
                                {
                                    var lng = p[0].GetDecimal();
                                    var lat = p[1].GetDecimal();
                                    parts.Add($"({lat:F6}, {lng:F6})");
                                }
                                <text>@string.Join(" -> ", parts)</text>
                            }
                            else if (string.Equals(type, "Point", System.StringComparison.OrdinalIgnoreCase))
                            {
                                var coordinates = geo.GetProperty("coordinates");
                                var lng = coordinates[0].GetDecimal();
                                var lat = coordinates[1].GetDecimal();
                                var txt = $"({lat:F6}, {lng:F6})";
                                <text>@txt</text>
                            }
                            else
                            {
                                @* Unknown format: show generic message *@
                                <text>Location data received</text>
                            }
                        }
                        catch { <text>Location data received</text>; }
                    }
                </p>
                @* Map container for displaying obstacle location *@
                <div id="map2" style="height: 320px;" class="rounded-xl ring-1 ring-gray-200"></div>
            </div>

            @* Leaflet map library and polyline decorator plugin *@
            <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
            <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
            <script src="https://unpkg.com/leaflet-polylinedecorator@1.7.0/dist/leaflet.polylineDecorator.min.js"></script>

            <script>
                @* Initialize map and display obstacle location (Point or LineString) *@

                    try
                    {
                        @* Initialize map first so tiles load even if parsing fails *@
                        var map2 = L.map('map2');
                        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {attribution: '&copy; OpenStreetMap contributors'}).addTo(map2);
                        @* Default view centered on Norway *@
                        map2.setView([59.91, 10.75], 5);

                        @* Parse location JSON (may be double-encoded) *@
                        var raw = @Html.Raw(Json.Serialize(Model.ObstacleLocation));
                        var geo = JSON.parse(raw);
                        if (typeof geo === 'string') { try { geo = JSON.parse(geo); } catch(_) {} }

                        @* Support both Point and LineString obstacle types on overview map *@
                        if (geo && geo.type === 'LineString' && Array.isArray(geo.coordinates)) {
                            var latlngs = geo.coordinates.map(function(c){ return [c[1], c[0]]; });
                            var pl = L.polyline(latlngs, { color: 'red', weight: 4, opacity: 1, lineCap: 'butt' }).addTo(map2);
                            @* Add start and end circle markers *@
                            if (latlngs.length > 0) {
                                var start = latlngs[0];
                                var end = latlngs[latlngs.length - 1];
                                L.circleMarker(start, { radius: 4, color: '#000', weight: 2, fillColor: 'red', fillOpacity: 1 }).addTo(map2).bringToFront();
                                L.circleMarker(end,   { radius: 4, color: '#000', weight: 2, fillColor: 'red', fillOpacity: 1 }).addTo(map2).bringToFront();
                            }
                            @* Add decorative dots along line if polyline decorator plugin is available *@
                            if (L && typeof L.polylineDecorator === 'function') {
                                L.polylineDecorator(pl, {
                                    patterns: [
                                        {
                                            offset: 0,
                                            repeat: '80px',
                                            symbol: L.Symbol.marker({
                                                rotate: false,
                                                markerOptions: { radius: 4, color: '#000', weight: 2, fillColor: 'red', fillOpacity: 1 }
                                            })
                                        }
                                    ]
                                }).addTo(map2);
                            }
                            map2.fitBounds(pl.getBounds(), { padding: [20, 20] });
                        } else if (geo && geo.type === 'Point' && Array.isArray(geo.coordinates)) {
                            @* Handle Point type obstacle *@
                            var lng = geo.coordinates[0];
                            var lat = geo.coordinates[1];
                            map2.setView([lat, lng], 13);
                            L.marker([lat, lng]).addTo(map2);
                        } else {
                            @* Fallback: center on Norway if format is unknown *@
                            map2.setView([60.39, 5.32], 6);
                        }
                    }

                    catch (error)
                    {
                        console.warn('Could not parse location JSON', error);
                    }

            </script>
        }

        @* Back to home button *@
        <div class="pt-2">
            <a asp-controller="Home" asp-action="Index"
               class="inline-flex items-center rounded-lg px-4 py-2 ring-1 ring-gray-300 hover:bg-gray-50">
                Back to Home
            </a>
        </div>
    </div>
</section>
