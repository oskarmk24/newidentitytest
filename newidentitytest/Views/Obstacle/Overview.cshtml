@model newidentitytest.Models.ObstacleData

@{
    ViewData["Title"] = "Overview";
}

<section class="mx-auto max-w-2xl">
    <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-6 space-y-4">
        <header>
            <h1 class="text-2xl font-semibold">Overview</h1>
            <p class="text-gray-600 mt-1">Thank you for registering an obstacle</p>
        </header>

        <!-- Viser dataene brukeren har fylt ut i skjemaet -->
        <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <!-- Navn på hinder -->
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Obstacle Name</dt>
                <dd class="mt-1 text-base text-gray-900 break-words">@Model.ObstacleName</dd>
            </div>

            <!-- Høyde på hinder -->
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Height</dt>
                <dd class="mt-1 text-base text-gray-900">@Model.ObstacleHeight</dd>
            </div>

            <!-- Beskrivelse av hinder -->
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Description</dt>
                <dd class="mt-1 text-base text-gray-900 break-words sm:col-span-3">@Model.ObstacleDescription</dd>
            </div>
        </dl>

        @if (!string.IsNullOrWhiteSpace(Model.ObstacleLocation))
        {
            <div class="mt-4 space-y-2">
                <p><strong>Location:</strong> 
                    @{ // Deserialiserer lokasjonen til et JSON-objekt og henter ut koordinatene. 
                        // Dersom det ikke lykkes vil de vise error melding.
                        try
                        {
                            var geo = System.Text.Json.JsonSerializer.Deserialize<System.Text.Json.JsonElement>(Model.ObstacleLocation);
                            var coordinates = geo.GetProperty("coordinates");
                            var lng = coordinates[0].GetDecimal();
                            var lat = coordinates[1].GetDecimal();
                            <text>Lat: @lat, Lng: @lng</text>
                        }
                        catch
                        {
                            <text>@Model.ObstacleLocation</text>
                        }
                    }
                </p>
                <div id="map2" style="height: 320px;" class="rounded-xl ring-1 ring-gray-200"></div>
            </div>

            <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
            <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
            <script src="https://unpkg.com/leaflet-polylinedecorator@1.7.0/dist/leaflet.polylineDecorator.min.js"></script>

            <script>
                // Dersom lokasjoninfo ikke kan hentes vil de vise error melding.

                    try
                    {
                        var geo = JSON.parse(@Html.Raw(Json.Serialize(Model.ObstacleLocation)));
                        var map2 = L.map('map2');
                        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {attribution: '&copy; OpenStreetMap'}).addTo(map2);

                        // Støtt både Point og LineString på oversiktskartet
                        if (geo && geo.type === 'LineString' && Array.isArray(geo.coordinates)) {
                            var latlngs = geo.coordinates.map(function(c){ return [c[1], c[0]]; });
                            var pl = L.polyline(latlngs, { color: 'red', weight: 4, opacity: 1, lineCap: 'butt' }).addTo(map2);
                            // End-caps as small circles
                            if (latlngs.length > 0) {
                                var start = latlngs[0];
                                var end = latlngs[latlngs.length - 1];
                                L.circleMarker(start, { radius: 4, color: '#000', weight: 2, fillColor: 'red', fillOpacity: 1 }).addTo(map2).bringToFront();
                                L.circleMarker(end,   { radius: 4, color: '#000', weight: 2, fillColor: 'red', fillOpacity: 1 }).addTo(map2).bringToFront();
                            }
                            // Dots along the line (if plugin present)
                            if (L && typeof L.polylineDecorator === 'function') {
                                L.polylineDecorator(pl, {
                                    patterns: [
                                        {
                                            offset: 0,
                                            repeat: '80px',
                                            symbol: L.Symbol.marker({
                                                rotate: false,
                                                markerOptions: { radius: 4, color: '#000', weight: 2, fillColor: 'red', fillOpacity: 1 }
                                            })
                                        }
                                    ]
                                }).addTo(map2);
                            }
                            map2.fitBounds(pl.getBounds(), { padding: [20, 20] });
                        } else {
                            var lng = geo.coordinates[0];
                            var lat = geo.coordinates[1];
                            map2.setView([lat, lng], 13);
                            L.marker([lat, lng]).addTo(map2);
                        }
                    }

                    catch (error)
                    {
                        console.warn('Could not parse location JSON', error);
                    }

            </script>
        }

        <!-- Tilbake-knapp som sender brukeren til startsiden -->
        <div class="pt-2">
            <a asp-controller="Home" asp-action="Index"
               class="inline-flex items-center rounded-lg px-4 py-2 ring-1 ring-gray-300 hover:bg-gray-50">
                Back to Home
            </a>
        </div>
    </div>
</section>
